{
	"editor.formatOnSave": true, // Automatically format the code on save
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": "explicit"
	}, // Ensure ESLint fixes problems automatically on save
	"eslint.validate": [
		"javascript",
		"javascriptreact",
		"typescript",
		"typescriptreact"
	], // Specify which files ESLint should validate
	"prettier.requireConfig": true // Ensure Prettier uses the local configuration file
}